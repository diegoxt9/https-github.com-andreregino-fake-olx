
@{
    ViewBag.Title = "Create";
    var teste = ViewBag.Usuarios;
}


@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger">
        @ViewBag.Erro
    </div>
}
    <form action="/Produto/Create" method="post">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" name="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label>Preco</label>
            <input type="text" name="Preco" class="form-control" />
        </div>
            <input type="hidden" name="Vendido" value="false" class="form-control" />
        
        <div class="form-group">
            <label>Usuário</label>
            <select name="UsuarioId" class="form-control">
                @foreach (var item in ViewBag.Usuarios)
                {
                    <option value="@item.UsuarioId">@item.Nome</option>
                }
            </select>
        </div>
        <button class="btn btn-primary">Salvar</button>
    </form>


