
@{
    ViewBag.Title = "View";
    var teste = ViewBag.Usuarios;
}


@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger">
        @ViewBag.Erro
    </div>
}
<form action="/Produto/Buy" method="post">
    <div class="form-group">
        <input type="hidden" name="ProdutoId" value="@Model.ProdutoId" />
        <label>Nome</label>
        <input type="text" disabled value="@Model.Nome" name="Nome" class="form-control" />
        <input type="hidden" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label>Preco</label>
        <input type="text" disabled value="@Model.Preco" name="Preco" class="form-control" />
        <input type="hidden" name="Preco" value="@Model.Preco" />
    </div>
    <div class="form-group">
        <label>Vendido</label>
        <input type="text" disabled value="@(Model.Vendido == true ? "sim" : "não")" name="Vendido" class="form-control" />
        <input type="hidden" name="Vendido" value="1" />
    </div>
    @if (Model.Vendido == false)
    {
    <button class="btn btn-primary">Confirmar Compra</button>
    }
    else {
    <span class="fora-estoque">Este produto está fora de estoque!</span>
    }
</form>


<style>
    .fora-estoque {
        font-size: 15px;
        font-weight: bold;
    }
</style>